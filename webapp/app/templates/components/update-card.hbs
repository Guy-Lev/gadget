<div class="event-item">
  <div class="event-inner">
    <div class="event-head" {{action 'toggle_expanded'}}>
      <i style="float:right;  padding-left:5px">
	{{#if (and updated_entity.is_selected (not expanded))}}
	  <span class="fa fa-circle" style="color:{{updated_entity.color}};"></span>
	{{/if}}
      </i>
      <div class="event-detail">
	<h5 style="display: inline;">
	  <i class="fa {{if expanded 'fa-minus' 'fa-plus'}}" aria-hidden="true"></i>
	  <i style="color:darkblue;" class="fa fa-wrench" aria-hidden="true"></i>
	  Update
	</h5>
	  {{#unless expanded}}
	    <i class="font-size:small">{{event.params.on}}</i>
	    <i style="font-size:small;">{{event.formated_time_stamp}}</i>
	  {{/unless}}
      </div>
    </div>
    {{#liquid-if expanded class="slide"}}
      <table class="table" style="table-layout:fixed;  width:100%;">
	<tbody>
	  <tr>
	    <td style="width:20%"><strong>On</strong></td>
	    <td>{{entity-row entity=updated_entity investigation=investigation search=search}}</td>
	  </tr>
	  <tr>
	    <td><strong>Updated</strong></td>
	    <td><pre class="vw-50">{{event.update_json}}</pre></td>
	  </tr>
	  <tr>
	    <td><strong>Time Stamp</strong></td>
	    <td><pre class="vw-50">{{event.formated_time_stamp}}</pre></td>
	  </tr>
	</tbody>
      </table>
    {{/liquid-if}}
  </div>
</div>
