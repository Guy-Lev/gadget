<div class="event-item">
  <div class="event-inner">
    <div class="event-head" {{action 'toggle_expanded'}}>
      <i style="float:right;  padding-left:5px">
	{{#each operation_entities as |entity|}}
	  {{#if (and entity.is_selected (not expanded))}}
	    <span class="fa fa-circle" style="color:{{entity.color}};"></span>
	  {{/if}}
	{{/each}}
      </i>
      <div class="event-detail">
	<h5 style="display: inline;">
	  <i class="fa {{if expanded 'fa-minus' 'fa-plus'}}" aria-hidden="true"></i>
	  <i style="color:darkgreen;" class="fa fa-tasks" aria-hidden="true"></i>
	  {{event.name}}
	</h5>
	{{#unless expanded}}
	  <i class="font-size:small">{{event.params.on}}</i>
	  <i style="font-size:small;">{{event.formated_time_stamp}}</i>
	{{/unless}}
      </div>
    </div>
    {{#liquid-if expanded class="slide"}}
      <table class="table" style="table-layout:fixed;  width:100%;">
	<tbody>
	  <tr>
	    <td style="width:20%"><strong>On</strong></td>
	    <td>
	      {{#each operation_entities as |entity|}}
		{{entity-row entity=entity investigation=investigation search=search}}
	      {{/each}}
	    </td>
	  </tr>
	  <tr>
	    <td><strong>Name</strong></td>
	    <td><pre class="vw-50">{{event.name}}</pre></td>
	  </tr>
	  {{#if event.has_additional_params}}
	    <tr>
	      <td><strong>Additional Info</strong></td>
	      <td><pre class="vw-50">{{event.additional_params}}</pre></td>
	    </tr>
	  {{/if}}
	  <tr>
	    <td><strong>Time Stamp</strong></td>
	    <td><pre class="vw-50">{{event.formated_time_stamp}}</pre></td>
	  </tr>
	</tbody>
      </table>
    {{/liquid-if}}
  </div>
</div>
